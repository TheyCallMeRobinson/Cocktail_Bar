<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_cocktail_brief"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_brief_info_list_item">

    <ImageView
        android:id="@+id/item_cocktail_brief_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/cocktail_placeholder"/>

    <TextView
        android:id="@+id/item_cocktail_brief_title_tv"
        style="@style/Text.Main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/item_cocktail_brief_iv"
        app:layout_constraintEnd_toEndOf="@+id/item_cocktail_brief_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Awesome Cocktail"/>

</androidx.constraintlayout.widget.ConstraintLayout>